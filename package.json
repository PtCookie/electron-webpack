{
    "name": "electron-webpack-template",
    "productName": "electron-app",
    "version": "0.1.0",
    "description": "Webpack template for Electron application",
    "keywords": [
        "Electron",
        "React",
        "TypeScript"
    ],
    "main": ".webpack/main",
    "author": {
        "name": "Minsup Ju",
        "email": "me@ptcookie.net",
        "url": "https://github.com/PtCookie"
    },
    "license": "MIT",
    "scripts": {
        "postinstall": "husky",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint",
        "format": "prettier --write ."
    },
    "dependencies": {
        "electron-squirrel-startup": "^1.0.1",
        "react": "^18.3.0",
        "react-dom": "^18.3.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.5.0",
        "@electron-forge/maker-dmg": "^7.5.0",
        "@electron-forge/maker-squirrel": "^7.5.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
        "@electron-forge/plugin-fuses": "^7.5.0",
        "@electron-forge/plugin-webpack": "^7.5.0",
        "@electron/fuses": "^1.8.0",
        "@eslint/compat": "^1.2.3",
        "@eslint/js": "^9.15.0",
        "@reforged/maker-appimage": "^3.3.2",
        "@types/node": "^20.0.0",
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "@vercel/webpack-asset-relocator-loader": "1.7.3",
        "css-loader": "^6.0.0",
        "electron": "33.2.0",
        "eslint": "^9.15.0",
        "eslint-plugin-import": "^2.25.0",
        "eslint-plugin-react": "^7.37.2",
        "fork-ts-checker-webpack-plugin": "^7.2.13",
        "globals": "^15.12.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "node-loader": "^2.0.0",
        "prettier": "3.3.3",
        "style-loader": "^3.0.0",
        "ts-loader": "^9.2.2",
        "ts-node": "^10.0.0",
        "typescript": "~5.6.3",
        "typescript-eslint": "^8.15.0"
    },
    "engines": {
        "node": "^20.18.0 || ^22.0.0"
    },
    "packageManager": "yarn@4.5.1",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint",
            "prettier --write"
        ],
        "*.{mjs,cjs}": [
            "eslint"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
